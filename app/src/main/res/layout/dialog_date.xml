<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:contentPadding="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/transparent_dialog"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtDateSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimaryBlue"
            android:text="Octobre 2019"
            android:textSize="25dp"
            />

        <fr.strada.utils.DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:calendarTextColor="@color/colorPrimaryBlue"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/annuler"
                android:textColor="@color/colorPrimaryBlue"
                android:background="@drawable/bg_btn_empty"
                android:layout_marginEnd="5dp"
                />
            <Button
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:text="@string/termin"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>